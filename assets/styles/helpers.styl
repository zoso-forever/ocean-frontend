clear-button-defaults()
	border 0
	background 0 0
	outline 0
	padding 0
	font-family inherit
	color inherit
	cursor pointer
	appearance none

	&::-moz-inner-focus
		border 0

size($width, $height = $width)
	width $width
	height $height

margin-x($margin)
	margin-left $margin
	margin-right $margin

margin-y($margin)
	margin-top $margin
	margin-bottom $margin

padding-x($padding)
	padding-left $padding
	padding-right $padding

padding-y($padding)
	padding-top $padding
	padding-bottom $padding

proportions(width, height)
	position relative
	height 0
	padding-top (height / width * 100) + '%'

not-highlight-on-tap()
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)

v-hidden()
	position absolute
	clip rect(1px, 1px, 1px, 1px)
	clip-path inset(50%)
	padding 0
	border 0
	size 1px
	overflow hidden
	white-space nowrap

container()
	margin-x auto

@import global
@import animation
@import reset
@import responsive

responsive($screens)

html
	font-family sans-serif
	box-sizing border-box
	overflow-x hidden

html
body
	min-height 100vh

body
	position relative

	font-family 'Noto Sans', sans-serif
	font-size 16px
	color #1b608d

	text-rendering optimizeLegibility
	-ms-text-size-adjust 100%
	-webkit-text-size-adjust 100%
	-moz-osx-font-smoothing grayscale
	-webkit-font-smoothing antialiased
	-webkit-tap-highlight-color rgba(0,0,0,0)


.page

	&_no-scroll
		overflow hidden

svg
img
	display block

img::selection
	background transparent

img
video
	-webkit-user-drag none

a
	text-decoration none
	background-color transparent
	-webkit-text-decoration-skip object

address
	font-style normal

input
textarea
	font-family inherit
	outline 0

h1
	font-size 62px
	text-align center
	// color transparent
	// -webkit-text-stroke-width .04em
	// -webkit-text-stroke-color #1b608d
	letter-spacing .01em
	font-weight 700

.button
	max-width 100%
	border 0
	margin 0
	padding 14px 20px 12px
	border-radius 0
	outline none
	overflow hidden

	text-align center
	text-transform uppercase
	font-family inherit
	white-space nowrap
	text-decoration none
	font-size 10px
	font-weight 700

	-moz-appearance none
	-webkit-appearance none
	cursor pointer
	user-select none

	&::-moz-focus-inner
		border 0

@import global
@import animation
@import reset

html
	font-family sans-serif
	box-sizing border-box
	overflow-x hidden

html
body
	min-height 100vh

body
	position relative

	font-family 'Noto Sans', sans-serif
	font-size 16px
	color #ffffff

	text-rendering optimizeLegibility
	-ms-text-size-adjust 100%
	-webkit-text-size-adjust 100%
	-moz-osx-font-smoothing grayscale
	-webkit-font-smoothing antialiased
	-webkit-tap-highlight-color rgba(0,0,0,0)

svg
img
	display block

img::selection
	background transparent

img
video
	-webkit-user-drag none

address
	font-style normal

h1
	font-size 62px
	text-align center
	color transparent
	-webkit-text-stroke-width .04em
	-webkit-text-stroke-color #fff
	letter-spacing .01em
	font-weight 700
	opacity 0;
	transform: translateY(60px) rotateY(-30deg) rotateX(-10deg) translateZ(0)
	transition: transform .8s cubic-bezier(.165,.84,.44,1), opacity .8s cubic-bezier(.165,.84,.44,1)
	transition-delay 2s

	.isLoaded &
		transform translateZ(0)
		opacity 1
		transition-delay 0s

.button
    max-width 100%
    border 0
    margin 0
    padding 14px 20px 10px 20px
    border-radius 0
    outline none
    overflow hidden

    text-align center
    text-transform uppercase
    font-family inherit
    white-space nowrap
    text-decoration none
    font-size 10px
    font-weight 700

    -moz-appearance none
    -webkit-appearance none
    cursor pointer
    user-select none

	&::-moz-focus-inner
		border 0

.app-textarea
.app-input
	display block
	width 100%
	background none
	background-color #edf1f7
	color #667080
	padding 30px
	margin 0
	box-shadow inset 0 0 0 4px @background-color
	border 0
	border-radius 0
	outline 0
	font-size 15px
	-webkit-appearance none
	-moz-appearance none
	transition background-color .4s $ease-in-quad

	&::placeholder
		color #b8c2d1

	&:focus
		background-color transparent

	@media desktop-and-up
		font-size 18px
